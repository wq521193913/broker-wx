/* pages/user/user.wxss */
.user_panel {
  border-top: 1px #e5e5e5 solid;
}
.user_panel .weui-cell {
  font-size: 34rpx;
}
.user_panel .weui-cell::before {
  border-top: 1px #eee solid;
}

.user_panel .weui-cell image {
  background: #f0f0f0;
  border-radius: 100rpx;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin-right: 5px;
}
.user_panel::first-child{
  margin-top: 0;
  border-top: none;
}
.kefu_btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  
}
